---
const { categories, brands, priceRanges } = Astro.props;
---

<aside class="filter-sidebar">
	<h2>Filters</h2>
	<div class="filter-group">
		<h3>Category</h3>
		<select name="category" class="filter-control">
			<option value="">All Categories</option>
			{categories.map(category => (
				<option value={category}>{category}</option>
			))}
		</select>
	</div>
	<div class="filter-group">
		<h3>Brand</h3>
		<select name="brand" class="filter-control">
			<option value="">All Brands</option>
			{brands.map(brand => (
				<option value={brand}>{brand}</option>
			))}
		</select>
	</div>
	<div class="filter-group">
		<h3>Price</h3>
		<select name="price" class="filter-control">
			<option value="0-Infinity">All Prices</option>
			{priceRanges.map(range => (
				<option value={`${range.min}-${range.max}`}>{range.label}</option>
			))}
		</select>
	</div>
</aside>

<style>
	.filter-sidebar {
		width: 250px;
		padding: 1rem;
		background-color: #f5f5f5;
		border-radius: 8px;
	}
	h2 {
		margin-bottom: 1rem;
	}
	.filter-group {
		margin-bottom: 1rem;
	}
	h3 {
		margin-bottom: 0.5rem;
	}
	select {
		width: 100%;
		padding: 0.5rem;
		border: 1px solid #ddd;
		border-radius: 4px;
	}
</style>