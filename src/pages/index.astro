---
import Layout from '../layouts/Layout.astro';
import ProductCard from '../components/ProductCard.astro';

const featuredProducts = [
	{ id: 1, name: 'Featured Product 1', price: 19.99, image: 'https://via.placeholder.com/200' },
	{ id: 2, name: 'Featured Product 2', price: 29.99, image: 'https://via.placeholder.com/200' },
	{ id: 3, name: 'Featured Product 3', price: 39.99, image: 'https://via.placeholder.com/200' },
];
---

<Layout title="Welcome to Our E-commerce Store">
	<section class="hero">
		<div class="hero-content">
			<h1>Welcome to Our E-commerce Store</h1>
			<p>Discover amazing products and unbeatable deals!</p>
			<a href="/products" class="cta-button">Shop Now</a>
		</div>
	</section>

	<section class="featured-products">
		<h2>Featured Products</h2>
		<div class="product-grid">
			{featuredProducts.map((product) => (
				<ProductCard {...product} />
			))}
		</div>
	</section>

	<section class="special-offer">
		<h2>Special Offer</h2>
		<div class="offer-content">
			<img src="https://via.placeholder.com/400x200" alt="Special Offer" />
			<div class="offer-text">
				<h3>Limited Time Deal!</h3>
				<p>Get 20% off on all electronics. Use code: ELECTRO20</p>
				<a href="/products" class="offer-button">Shop Electronics</a>
			</div>
		</div>
	</section>

	<section class="newsletter">
		<h2>Stay Updated</h2>
		<p>Subscribe to our newsletter for exclusive deals and updates.</p>
		<form class="newsletter-form">
			<input type="email" placeholder="Enter your email" required>
			<button type="submit">Subscribe</button>
		</form>
	</section>
</Layout>

<style>
	.hero {
		background-image: url('https://via.placeholder.com/1200x400');
		background-size: cover;
		background-position: center;
		color: white;
		text-align: center;
		padding: 4rem 2rem;
		margin-bottom: 2rem;
	}

	.hero-content {
		max-width: 600px;
		margin: 0 auto;
	}

	h1 {
		font-size: 3rem;
		margin-bottom: 1rem;
	}

	.cta-button {
		display: inline-block;
		background-color: #ff4500;
		color: white;
		padding: 0.8rem 1.5rem;
		text-decoration: none;
		font-weight: bold;
		border-radius: 4px;
		margin-top: 1rem;
		transition: background-color 0.3s ease;
	}

	.cta-button:hover {
		background-color: #ff6347;
	}

	section {
		margin-bottom: 3rem;
	}

	h2 {
		text-align: center;
		margin-bottom: 1.5rem;
		font-size: 2rem;
	}

	.product-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 2rem;
	}

	.special-offer {
		background-color: #f0f0f0;
		padding: 2rem;
		border-radius: 8px;
	}

	.offer-content {
		display: flex;
		align-items: center;
		gap: 2rem;
	}

	.offer-text {
		flex: 1;
	}

	.offer-button {
		display: inline-block;
		background-color: #4caf50;
		color: white;
		padding: 0.5rem 1rem;
		text-decoration: none;
		border-radius: 4px;
		margin-top: 1rem;
		transition: background-color 0.3s ease;
	}

	.offer-button:hover {
		background-color: #45a049;
	}

	.newsletter {
		text-align: center;
		background-color: #e9e9e9;
		padding: 2rem;
		border-radius: 8px;
	}

	.newsletter-form {
		display: flex;
		justify-content: center;
		gap: 1rem;
		margin-top: 1rem;
	}

	input[type="email"] {
		padding: 0.5rem;
		width: 300px;
		border: 1px solid #ccc;
		border-radius: 4px;
	}

	button[type="submit"] {
		background-color: #333;
		color: white;
		border: none;
		padding: 0.5rem 1rem;
		border-radius: 4px;
		cursor: pointer;
		transition: background-color 0.3s ease;
	}

	button[type="submit"]:hover {
		background-color: #555;
	}
</style>